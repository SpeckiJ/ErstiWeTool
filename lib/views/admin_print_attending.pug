doctype html
html
  head
    meta(http-equiv='content-type', content='text/html; charset=utf-8; width=device-width; initial-scale=1.0')
    style.
      body {
        margin: 0;
        font-family: sans;
      }
      table tr:nth-child(odd) {
        background-color: #ccc;
      }
      @media print {
        .status { display: none; }
      }

  body
    h3= 'Erstifahrt ' + year + ': ' + attendees.length + ' Teilnehmende'

    div
      canvas#chart-gender(width="300", height="200")
      canvas#chart-study(width="400", height="200")
      canvas#chart-food(width="400", height="200")

    table.table
      thead
        tr
          th Name
          th Geburtstag
          th Studiengang
          th Kommentar

      each u in attendees
        tr
          td= u.firstname + ' ' + u.lastname
          td= u.birthday
          td= u.study
          td= u.comment

    script(src='../../js/jquery-2.2.4.min.js' integrity='sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=' crossorigin='anonymous')
    script(src="../../js/Chart.min.js")
    script(src='../../js/admin-charts.js')
